@model SpecialityViewModel

<style>
    .form-group {
        margin-bottom: 3%; /* İstediğiniz yüzde cinsinden boşluk miktarını ayarlayabilirsiniz */
    }
</style>

<div class="row mt-3">
    <div class="col-md-6 offset-md-3">
        <form method="post" class="form-horizontal">
            @*<div asp-validation-summary=ModelOnly*></div>*@
            <div class="row form-group">
                <input asp-for="Speciality.Speciality_id" type="hidden" />
                <div class="col col-md-3">
                    <label for="text-input" class=" form-control-label">Uzmanlık Alanı'nın İsmi</label>
                </div>
                <div class="col-12 col-md-9">
                    <input asp-for="Speciality.SpecialityName" id="text-input" name="Speciality.SpecialityName" placeholder="" class="form-control">
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Değişiklikleri Güncelle 
                </button>
                <a type="reset" class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="SpecialityList">
                    <i class="fa fa-ban"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>