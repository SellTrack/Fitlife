@page
@model CustomRegisterModel

    <style>
        .form-group {
            margin-bottom: 3%; /* İstediğiniz yüzde cinsinden boşluk miktarını ayarlayabilirsiniz */
        }
    </style>

<div class="row mt-3">
    <div class="col-md-6 offset-md-3">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" class="form-horizontal">

            <div class="form-group row">
                <label asp-for="Input.Name" class="col-md-3 col-form-label">İsim</label>
                <div class="col-md-9">
                    <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" placeholder="İsim" required>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Surname" class="col-md-3 col-form-label">İsim</label>
                <div class="col-md-9">
                    <input asp-for="Input.Surname" class="form-control" autocomplete="username" aria-required="true" placeholder="Soyisim" required>
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.Email" class="col-md-3 col-form-label">E-Posta</label>
                <div class="col-md-9">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="isim@örnek.com" required>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.Password" class="col-md-3 col-form-label">Şifre</label>
                <div class="col-md-9">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre" required>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.ConfirmPassword" class="col-md-3 col-form-label">Şifre Onayla</label>
                <div class="col-md-9">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre onayla" required>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">Rolü</label>
                <div class="col-md-9">
                    <div class="form-check">
                        <div class="radio">
                            @foreach (var roleItem in Model.Input.RoleList)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Input.Role" value="@roleItem.Value" required>
                                    <label class="form-check-label">@roleItem.Text</label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <button id="registerSubmit" type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Yeni Elemanı Ekle
                    </button>

                    <a type="reset" class="btn btn-danger btn-sm" asp-area="MasterMind" asp-controller="Admin" asp-action="Employee">
                        <i class="fa fa-ban"></i> İptal
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>