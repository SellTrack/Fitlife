@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="İsminizi Girin." />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Surname" class="form-control" placeholder="Soyadınızı girin." />
                <label asp-for="Input.Surname" class="form-label"></label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefon Numaranızı Girin." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Adress" class="form-control" placeholder="Adresinizi Girin." />
                <label asp-for="Input.Adress" class="form-label"></label>
                <span asp-validation-for="Input.Adress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Birthdate" class="form-control" placeholder="Doğum Tarihinizi Girin." />
                <label asp-for="Input.Birthdate" class="form-label"></label>
                <span asp-validation-for="Input.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.Gender" class="form-control">
                    <option value="" disabled>Cinsiyet Seçiniz</option>
                    <option value="Erkek">Erkek</option>
                    <option value="Kız">Kız</option>
                </select>
                <label asp-for="Input.Gender" class="form-label"></label>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ProfilePhoto" class="form-control" type="file" id="profile-photo-input" name="Input.ProfilePhoto" />
                <label asp-for="Input.ProfilePhoto" class="form-label"></label>
                <span asp-validation-for="Input.ProfilePhoto" class="text-danger"></span>
            </div>

            <div id="profile-photo-preview" class="mb-3" style="display: none;">
                <img id="profile-photo-preview-img" alt="Profile Preview" style="max-width: 100%; max-height: 200px;" />
            </div>

            <input asp-for="Input.UserID" class="form-control" type="hidden" />

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Kaydet</button>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>document.getElementById('profile-photo-input').addEventListener('change', function (e) {
            var fileInput = e.target;
            var file = fileInput.files[0];

            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('profile-photo-preview-img').src = e.target.result;
                    document.getElementById('profile-photo-preview').style.display = 'block';
                }
                reader.readAsDataURL(file);
            } else {
                document.getElementById('profile-photo-preview').style.display = 'none';
            }
        });</script>
}