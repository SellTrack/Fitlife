@page
@model LoginModel

<style>
    .form-group {
        margin-bottom: 3%; /* İstediğiniz yüzde cinsinden boşluk miktarını ayarlayabilirsiniz */
    }
</style>


<div class="row mt-3">
    <div class="col-md-6 offset-md-3">
        <div class="login-form">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <label>E-posta Adresi</label>
                    <input asp-for="Input.Email" type="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input asp-for="Input.Password" type="password" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary btn-sm" type="submit">Giriş Yap</button>
            </form>
        </div>
    </div>
</div>
